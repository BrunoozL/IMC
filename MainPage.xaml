<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="IMC.MainPage">

    <StackLayout BackgroundColor="Gray" > 
        <Frame BackgroundColor="#546" Padding="24" CornerRadius="0">
            <Label Text="Calculando seu IMC" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>
        <Label Text="Digite seu peso:" FontSize="Title" Padding="30,10,30,10"/>
        <Entry Keyboard="Numeric" x:Name="txt_peso"/>
        <Label Text="Digite sua altura:" FontSize="Title" Padding="30,10,30,10"/>
        <Entry Keyboard="Numeric" x:Name="txt_altura"/>
        <Button Clicked="Button_Clicked" Text="Calcular IMC" BackgroundColor="DimGray"/>
        <Label x:Name="txt_imc" FontSize="25"/>
        <Label x:Name="txt_table" FontSize="25"/>
        <Label x:Name="txt_referencia" FontSize="25"/>
    </StackLayout>

</ContentPage>
